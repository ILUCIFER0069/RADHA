    },
    {
      "src": "/static/screenshots/billing.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Create new bill interface"
    },
    {
      "src": "/static/screenshots/mobile-dashboard.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile dashboard view"
    }
  ],
  "shortcuts": [
    {
      "name": "New Bill",
      "short_name": "Bill",
      "description": "Create a new bill quickly",
      "url": "/Frontend/new_bill.html",
      "icons": [
        {
          "src": "/static/icons/icon-pack/web/android-chrome-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Products",
      "short_name": "Products",
      "description": "Manage product inventory",
      "url": "/Frontend/products.html",
      "icons": [
        {
          "src": "/static/icons/icon-pack/web/android-chrome-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Customers",
      "short_name": "Customers",
      "description": "Manage customer database",
      "url": "/Frontend/customers.html",
      "icons": [
        {
          "src": "/static/icons/icon-pack/web/android-chrome-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "new-client",
  "file_handlers": [
    {
      "action": "/Frontend/new_bill.html",
      "accept": {
        "application/pdf": [".pdf"],
        "text/csv": [".csv"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+billing",
      "url": "/Frontend/new_bill.html?data=%s"
    }
  ],
  "share_target": {
    "action": "/Frontend/new_bill.html",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ],
  "developer": {
    "name": "Distributor Billing App",
    "url": "https://billingapp.com"
  },
  "homepage_url": "https://billingapp.com",
  "author": "Distributor Billing App Team",
  "minimum_version": "1.0.0",
  "update_url": "https://billingapp.com/updates",
  "offline_enabled": true,
  "prefer_related_applications": false,
  "related_applications": [],
  "iarc_rating_id": "",
  "microsoft": {
    "tileColor": "#0a0a1f",
    "tileImage": "/static/icons/icon-pack/web/android-chrome-192x192.png"
  },
  "apple": {
    "appleTouchIcon": "/static/icons/icon-pack/web/apple-touch-icon.png",
    "appleTouchStartupImage": "/static/icons/icon-pack/web/android-chrome-512x512.png",
    "appleStatusBarStyle": "default"
  },
  "chrome": {
    "theme_color": "#0a0a1f",
    "background_color": "#0a0a1f"
  },
  "firefox": {
    "theme_color": "#0a0a1f"
  },
  "safari": {
    "theme_color": "#0a0a1f"
  }
}
